FROM python:3.6-slim-buster


RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y \
            libsodium-dev \
            libsecp256k1-dev \
            libssl-dev \
            liblzma-dev \
            libsnappy-dev \
            liblz4-dev \
            libbz2-dev \
            zlib1g-dev \
            librocksdb-dev \
            software-properties-common \
            gnupg2 \
            build-essential \
 && apt-get autoremove -y
